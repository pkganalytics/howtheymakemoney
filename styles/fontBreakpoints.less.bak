@tablet_land: 1024px;
@monitor: 1024px;

@media (min-width: @mobile_port) {
	:root {
		font-size: 10px;
	}
}

@media (min-width: @mobile_land) {
	:root {
		font-size: 12px;
	}
}

@media (min-width: @tablet_port) {
	:root {
		font-size: 13px;
	}
}

@media (min-with: @tablet-land) {
	:root {
		font-size: 14px;
	}
}

@media (min-width: @monitor) {
	:root {
		font-size: 14px;
	}
}
